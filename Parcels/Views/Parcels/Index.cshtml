<html>
  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col">
          @using Parcels.Models;

          <h1>Look at your package here!</h1>
          @if (Model.Count == 0)
          {
            <p>There is no package here... sadface.</p>
          }
          <ul>
            @foreach (Parcel parcel in Model)
            {
              <li>Cost to Ship: @parcel.CostToShip() Parcel Volume: @parcel.Volume()</li>
                <ul>
                  <li>Height: @parcel.Height</li>
                  <li>Length: @parcel.Length</li>
                  <li>Width: @parcel.Width</li>
                  <li>Weight: @parcel.Height</li>
                </ul>
            }
          </ul>

          <a href = "/parcels/new">Click here to add a NEW package.</a>
        </div>
      </div>
    </div>
  </body>
</html>